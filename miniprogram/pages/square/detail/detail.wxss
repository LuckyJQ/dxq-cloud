.index-icon-text {
  font-size: 16px;
  margin-left: 20rpx;
}

.tab-container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.content {
  line-height: 1.8;
  margin-top: 20rpx;
}

.tab-container image {
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: auto;
}

.tab-container .tab-top {
  align-items: center;
  margin-bottom: 10rpx;
  display: flex;
}

.tab-container .tab-top .title {
  font-size: 16px;
  font-weight: 500;
  margin-left: 20rpx;
  line-height: 48rpx;
  width: 360rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tab-bottom {
  display: flex;
  flex-direction: column;
}

.tab-bottom text {
  line-height: 2;
  font-size: 16px;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
}

.share-box {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-box .top {
  width: 100%;
  padding: 20rpx 0;
}

.share-box .img {
  width: 300rpx;
  height: 480rpx;
  margin-top: 30rpx;
}

.share-box .poster-button {
  margin: 40rpx 0;
}

.hidden {
  position: absolute;
  left: -6000rpx;
}
