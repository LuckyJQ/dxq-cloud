.published-item {
  padding-left: 20rpx !important;
  height: 120rpx !important;
}

.text-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items:center;
}

.text-info .text-left{
  width: 200rpx;
  display: flex;
  align-items: center;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
}

.title {
  width: 360rpx;
  font-size: 16px;
  font-weight: 500;
  line-height: 48rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}